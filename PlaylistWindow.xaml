<Window x:Class="TikTokMusicPlayer.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="播放列表"
        Width="280" Height="600"
        Background="Transparent"
        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True"
        LocationChanged="Window_LocationChanged">

    <Border BorderBrush="#9D4EDD"
            BorderThickness="2"
            CornerRadius="10"
            Background="#0A0F23"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="#9D4EDD" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="播放列表" FontSize="14" FontWeight="Bold" Foreground="#00FFFF"
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FFFF" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TrackCountText" Text="(0首)" 
                          Foreground="#888" FontSize="11"
                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

            <ListBox x:Name="PlaylistListBox" Grid.Row="1"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#00FFFF"
                     SelectionMode="Single"
                     SelectionChanged="PlaylistListBox_SelectionChanged"
                     MouseDoubleClick="PlaylistListBox_MouseDoubleClick"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ItemBorder"
                                Background="Transparent" 
                                BorderThickness="0"
                                Padding="8,5"
                                Margin="0,0,0,2"
                                CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding Index}" 
                                          Foreground="#666" 
                                          FontSize="11"
                                          Width="25"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding Title}" 
                                          Foreground="#00FFFF" 
                                          FontSize="12"
                                          TextTrimming="CharacterEllipsis"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#1A9D4EDD"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="清空列表" Click="BtnClear_Click" Width="80" Height="28" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#666" BorderThickness="1" CornerRadius="3">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="11"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="关闭" Click="BtnClose_Click" Width="60" Height="28">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="3">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#00FFFF" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="11"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
