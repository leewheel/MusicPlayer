<Window x:Class="TikTokMusicPlayer.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="发现新版本"
        Width="450" Height="380"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="#9D4EDD"
            BorderThickness="2"
            CornerRadius="10"
            Background="#0A0F23">
        <Border.Effect>
            <DropShadowEffect Color="#9D4EDD" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="发现新版本!" 
                      FontSize="20" FontWeight="Bold" Foreground="#00FFFF"
                      HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00FFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="当前版本: " Foreground="#888" FontSize="12"/>
                <TextBlock x:Name="CurrentVersionText" Text="1.0.0" Foreground="#888" FontSize="12"/>
                <TextBlock Text=" → " Foreground="#888" FontSize="12"/>
                <TextBlock Text="最新版本: " Foreground="#888" FontSize="12"/>
                <TextBlock x:Name="LatestVersionText" Text="1.0.1" Foreground="#00FFFF" FontSize="12" FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Grid.Row="2" Text="更新内容:" 
                      Foreground="#C77DFF" FontSize="12" Margin="0,0,0,5"/>

            <Border Grid.Row="3" Background="#0F1428" CornerRadius="5" Margin="0,0,0,15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <TextBlock x:Name="ReleaseNotesText" 
                              Foreground="#888" FontSize="11"
                              TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <ProgressBar Grid.Row="4" x:Name="DownloadProgress" 
                        Height="20" Margin="0,0,0,10"
                        Background="#0F1428" 
                        Foreground="#00FFFF"
                        BorderBrush="#00FFFF"
                        BorderThickness="1"
                        Minimum="0" Maximum="100" Value="0"
                        Visibility="Collapsed"/>

            <TextBlock Grid.Row="4" x:Name="ProgressText" 
                      Foreground="#00FFFF" FontSize="11"
                      HorizontalAlignment="Center" Margin="0,5,0,10"
                      Visibility="Collapsed"/>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnUpdate" Content="立即更新" Click="BtnUpdate_Click"
                        Width="100" Height="32" Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#00FFFF" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="12"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="BtnLater" Content="稍后提醒" Click="BtnLater_Click"
                        Width="100" Height="32" Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#666" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="12"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="BtnSkip" Content="跳过此版本" Click="BtnSkip_Click"
                        Width="100" Height="32">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#666" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="12"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
