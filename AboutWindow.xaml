<Window x:Class="TikTokMusicPlayer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于"
        Width="350" Height="220"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="#9D4EDD"
            BorderThickness="2"
            CornerRadius="10"
            Background="#0A0F23">
        <Border.Effect>
            <DropShadowEffect Color="#9D4EDD" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="TikTok Music Player" 
                      FontSize="18" FontWeight="Bold" Foreground="#00FFFF"
                      HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00FFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Grid.Row="1" x:Name="VersionText" 
                      Text="Version 1.0.0.0" 
                      FontSize="11" Foreground="#888"
                      HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Canvas Grid.Row="2" x:Name="FloatingTextCanvas" 
                   Height="50" VerticalAlignment="Center"/>

            <Button Grid.Row="3" Content="知道了" Click="BtnOk_Click"
                    Width="100" Height="32" HorizontalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#0F1428" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="5">
                            <TextBlock Text="{TemplateBinding Content}" 
                                      Foreground="#00FFFF" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="12"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
