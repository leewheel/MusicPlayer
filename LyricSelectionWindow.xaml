<Window x:Class="TikTokMusicPlayer.LyricSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择歌词"
        Width="420" Height="480"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="#9D4EDD"
            BorderThickness="2"
            CornerRadius="10"
            Background="#0A0F23">
        <Border.Effect>
            <DropShadowEffect Color="#9D4EDD" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="选择歌词" FontSize="18" FontWeight="Bold" Foreground="#00FFFF"
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="20" Height="20" Click="BtnClose_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                      Fill="#FF6B6B" Stretch="Uniform" Width="12" Height="12"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <TextBlock Grid.Row="0" Margin="0,30,0,0" Text="搜索中..." 
                       x:Name="LoadingText" Foreground="#888" FontSize="12"
                       HorizontalAlignment="Center"/>

            <ListBox x:Name="LyricListBox" Grid.Row="1"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#00FFFF"
                     SelectionMode="Single"
                     MouseDoubleClick="LyricListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#0F1428" 
                                BorderBrush="#00FFFF" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10" 
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding SongName}" 
                                          Foreground="#00FFFF" 
                                          FontSize="13" 
                                          FontWeight="Bold"
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Row="1" Text="{Binding Artist}" 
                                          Foreground="#888" 
                                          FontSize="11" 
                                          Margin="0,3,0,0"
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Row="2" Text="{Binding Source}" 
                                          Foreground="#C77DFF" 
                                          FontSize="10" 
                                          Margin="0,3,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <CheckBox x:Name="ChkDownloadLyric" Content="下载歌词到歌曲目录"
                         Foreground="#00FFFF" FontSize="11" VerticalAlignment="Center"
                         Margin="0,0,20,0" IsChecked="True"/>
                <Button Content="取消" Click="BtnCancel_Click"
                        Width="70" Height="30" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#666" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="12"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="确定" Click="BtnConfirm_Click"
                        Width="70" Height="30">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#0F1428" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#00FFFF" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="12"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
